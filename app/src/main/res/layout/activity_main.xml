<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_num1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textAlignment="textEnd"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="50sp"/>
    <TextView
        android:id="@+id/txt_operator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_num1"
        android:textColor="@color/white"
        android:textSize="35sp"/>
    <TextView
        android:id="@+id/txt_num2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/txt_operator"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="50sp"/>
    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@id/txt_num2"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/orange"
        android:text="C"
        android:textSize="25sp"
        android:onClick="cClick"/>

    <Button
        android:id="@+id/btn_0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btn_clear"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/white"
        android:text="0"
        android:textSize="25sp"
        android:onClick="numberClick"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btn_0"
        android:background="@drawable/circle_button"
        android:textColor="@color/white"
        android:backgroundTint="@color/orange"
        android:text="="
        android:textSize="40sp"
        android:onClick="resultClick"/>

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/orange"
        android:text="+"
        android:textSize="40sp"
        android:onClick="operatorClick"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_0"
        android:layout_marginEnd="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/white"
        android:text="1"
        android:textSize="25sp"
        android:onClick="numberClick"/>
    <Button
        android:id="@+id/btn_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_0"
        android:layout_toRightOf="@id/btn_1"
        android:layout_marginEnd="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/white"
        android:text="2"
        android:textSize="25sp"
        android:onClick="numberClick"/>
    <Button
        android:id="@+id/btn_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_0"
        android:layout_toRightOf="@id/btn_2"
        android:layout_marginEnd="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/white"
        android:text="3"
        android:textSize="25sp"
        android:onClick="numberClick"/>

    <Button
        android:id="@+id/op_min"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_0"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/orange"
        android:text="-"
        android:textSize="40sp"
        android:onClick="operatorClick"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_1"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/white"
        android:text="4"
        android:textSize="25sp"
        android:onClick="numberClick"/>
    <Button
        android:id="@+id/btn_5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_2"
        android:layout_toRightOf="@id/btn_1"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/white"
        android:text="5"
        android:textSize="25sp"
        android:onClick="numberClick"/>
    <Button
        android:id="@+id/btn_6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_3"
        android:layout_toRightOf="@id/btn_2"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/white"
        android:text="6"
        android:textSize="25sp"
        android:onClick="numberClick"/>

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/op_min"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/orange"
        android:text="ร"
        android:textSize="40sp"
        android:onClick="operatorClick"/>

    <Button
        android:id="@+id/btn_7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_4"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/white"
        android:text="7"
        android:textSize="25sp"
        android:onClick="numberClick"/>
    <Button
        android:id="@+id/btn_8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_5"
        android:layout_toRightOf="@id/btn_1"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/white"
        android:text="8"
        android:textSize="25sp"
        android:onClick="numberClick"/>
    <Button
        android:id="@+id/btn_9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btn_6"
        android:layout_toRightOf="@id/btn_2"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/white"
        android:text="9"
        android:textSize="25sp"
        android:onClick="numberClick"/>

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/btn_multiply"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_button"
        android:textColor="@color/orange"
        android:text="รท"
        android:textSize="40sp"
        android:onClick="operatorClick"/>
</RelativeLayout>
